<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="org.example.mapper.DeviceMapper">
    <resultMap id="BaseResultMap" type="org.example.entity.Device">
        <id property="deviceId" column="device_id" />
        <result property="deviceName" column="device_name" />
        <result property="deviceType" column="device_type" />
        <result property="location" column="location" />
        <result property="installDate" column="install_date" />
        <result property="lastMaintain" column="last_maintain" />
    </resultMap>

    <select id="selectById" resultMap="BaseResultMap">
        SELECT * FROM device WHERE device_id = #{deviceId}
    </select>

    <select id="selectAll" resultMap="BaseResultMap">
        SELECT * FROM device
    </select>

    <insert id="insert" parameterType="org.example.entity.Device">
        INSERT INTO device (device_id, device_name, device_type, location, install_date, last_maintain)
        VALUES (#{deviceId}, #{deviceName}, #{deviceType}, #{location}, #{installDate}, #{lastMaintain})
    </insert>

    <update id="update" parameterType="org.example.entity.Device">
        UPDATE device
        SET device_name=#{deviceName}, device_type=#{deviceType}, location=#{location}, install_date=#{installDate}, last_maintain=#{lastMaintain}
        WHERE device_id=#{deviceId}
    </update>

    <delete id="deleteById" parameterType="string">
        DELETE FROM device WHERE device_id=#{deviceId}
    </delete>
</mapper>
