<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="org.example.mapper.CommunityMapper">
    <resultMap id="BaseResultMap" type="org.example.entity.Community">
        <id property="id" column="id" />
        <result property="name" column="name" />
        <result property="address" column="address" />
        <result property="propertyPhone" column="property_phone" />
        <result property="description" column="description" />
        <result property="createTime" column="create_time" />
        <result property="updateTime" column="update_time" />
    </resultMap>

    <select id="selectById" resultMap="BaseResultMap">
        SELECT * FROM community WHERE id = #{id}
    </select>

    <select id="selectAll" resultMap="BaseResultMap">
        SELECT * FROM community
    </select>

    <insert id="insert" parameterType="org.example.entity.Community">
        INSERT INTO community (name, address, property_phone, description, create_time, update_time)
        VALUES (#{name}, #{address}, #{propertyPhone}, #{description}, #{createTime}, #{updateTime})
    </insert>

    <update id="update" parameterType="org.example.entity.Community">
        UPDATE community
        SET name=#{name}, address=#{address}, property_phone=#{propertyPhone}, description=#{description}, create_time=#{createTime}, update_time=#{updateTime}
        WHERE id=#{id}
    </update>

    <delete id="deleteById" parameterType="int">
        DELETE FROM community WHERE id=#{id}
    </delete>
</mapper>
