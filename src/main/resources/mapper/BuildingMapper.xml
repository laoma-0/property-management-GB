<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="org.example.mapper.BuildingMapper">
    <resultMap id="BaseResultMap" type="org.example.entity.Building">
        <id property="buildingId" column="building_id" />
        <result property="buildingName" column="building_name" />
        <result property="floorCount" column="floor_count" />
    </resultMap>

    <select id="selectById" resultMap="BaseResultMap">
        SELECT * FROM building WHERE building_id = #{buildingId}
    </select>

    <select id="selectAll" resultMap="BaseResultMap">
        SELECT * FROM building
    </select>

    <insert id="insert" parameterType="org.example.entity.Building">
        INSERT INTO building (building_name, floor_count)
        VALUES (#{buildingName}, #{floorCount})
    </insert>

    <update id="update" parameterType="org.example.entity.Building">
        UPDATE building
        SET building_name=#{buildingName}, floor_count=#{floorCount}
        WHERE building_id=#{buildingId}
    </update>

    <delete id="deleteById" parameterType="int">
        DELETE FROM building WHERE building_id=#{buildingId}
    </delete>
</mapper>
