<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="org.example.mapper.UserProfileMapper">
    <resultMap id="BaseResultMap" type="org.example.entity.UserProfile">
        <id property="profileId" column="profile_id" />
        <result property="userId" column="user_id" />
        <result property="paymentHabit" column="payment_habit" />
        <result property="preferredChannel" column="preferred_channel" />
        <result property="lastPaymentDate" column="last_payment_date" />
    </resultMap>

    <select id="selectById" resultMap="BaseResultMap">
        SELECT * FROM user_profile WHERE profile_id = #{profileId}
    </select>

    <select id="selectAll" resultMap="BaseResultMap">
        SELECT * FROM user_profile
    </select>

    <insert id="insert" parameterType="org.example.entity.UserProfile">
        INSERT INTO user_profile (user_id, payment_habit, preferred_channel, last_payment_date)
        VALUES (#{userId}, #{paymentHabit}, #{preferredChannel}, #{lastPaymentDate})
    </insert>

    <update id="update" parameterType="org.example.entity.UserProfile">
        UPDATE user_profile
        SET user_id=#{userId}, payment_habit=#{paymentHabit}, preferred_channel=#{preferredChannel}, last_payment_date=#{lastPaymentDate}
        WHERE profile_id=#{profileId}
    </update>

    <delete id="deleteById" parameterType="long">
        DELETE FROM user_profile WHERE profile_id=#{profileId}
    </delete>
</mapper>
